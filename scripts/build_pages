##!/bin/sh
. './scripts/clone'
. './scripts/build_page'

build_pages() {
  local dest=$1
  local repo_url=$2
  local branches=$3
  local library_name=$4
  local bundle=$5
  local npm_build_targets=$6

  for branch in $branches; do
    tmp_branch=$(clone $dest $repo_url $branch)
    build_page $tmp_branch $dest/$branch $library_name "$npm_build_targets" "$bundle"
    rm -rf $tmp_branch
  done
 }